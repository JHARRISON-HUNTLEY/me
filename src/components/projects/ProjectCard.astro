---
interface Props {
  title: string;
  description: string;
  tech: string[];
  href: string;
  status: 'live' | 'in-progress';
}

const { title, description, tech, href, status } = Astro.props;
---

<a 
  href={href}
  class="group block p-6 bg-zinc-900 rounded-lg border border-zinc-800 hover:border-zinc-700 transition-all duration-300"
>
  <div class="flex justify-between items-start">
    <h3 class="text-xl font-semibold text-zinc-100 group-hover:text-white">
      {title}
    </h3>
    {status === 'live' && (
      <span class="px-2 py-1 text-xs rounded-full bg-emerald-900/30 text-emerald-400 border border-emerald-800/50">
        Live
      </span>
    )}
    {status === 'in-progress' && (
      <span class="px-2 py-1 text-xs rounded-full bg-amber-900/30 text-amber-400 border border-amber-800/50">
        In Progress
      </span>
    )}
  </div>
  
  <p class="mt-2 text-zinc-400 group-hover:text-zinc-300">
    {description}
  </p>
  
  <div class="mt-4 flex flex-wrap gap-2">
    {tech.map((t) => (
      <span class="px-2 py-1 text-xs rounded-full bg-zinc-800 text-zinc-400 border border-zinc-700">
        {t}
      </span>
    ))}
  </div>
</a>